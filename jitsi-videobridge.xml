<?xml version="1.0"?>
<Container version="2">
  <Name>jitsi-videobridge</Name>
  <Repository>tiredofit/jitsi-videobridge:latest</Repository>
  <Registry>https://hub.docker.com/r/tiredofit/jitsi-videobridge/</Registry>
  <Network>bridge</Network>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://hub.docker.com/r/tiredofit/jitsi-videobridge/</Support>
  <Project/>
  <Overview>Dockerized Jitsi Videobridge for Integration with Jitsi Meet WebRTC conferencing solution</Overview>
  <Category/>
  <WebUI/>
  <TemplateURL/>
  <Icon>/plugins/dynamix.docker.manager/images/question.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <DonateText/>
  <DonateLink/>
  <Description>Dockerized Jitsi Videobridge for Integration with Jitsi Meet WebRTC conferencing solution</Description>
  <Config Name="JVB_TCP_PORT" Target="4443" Default="4443" Mode="tcp" Description="JVB_TCP_PORT" Type="Port" Display="always" Required="false" Mask="false">4443</Config>
  <Config Name="JVB_PORT" Target="10000-10100" Default="10000-10100" Mode="udp" Description="JVB_PORT" Type="Port" Display="always" Required="false" Mask="false">10000-10100</Config>
  <Config Name="Certs" Target="/certs" Default="/mnt/user/appdata/jitsi/certs/" Mode="rw" Description="Needed to share certificates between containers for Self Signed variants" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/jitsi/certs/</Config>
  <Config Name="Logs" Target="/var/log/jitsi" Default="/mnt/user/appdata/logs/jvb/" Mode="rw" Description="Logs" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/logs/jvb/</Config>
  <Config Name="Hostname" Target="HOST" Default="meet.example.com" Mode="" Description="Hostname of your server e.g. meet.example.com Should be same as all other hostnames" Type="Variable" Display="always" Required="false" Mask="false">meet.example.com</Config>
  <Config Name="PROSODY_HOST" Target="PROSODY_HOST" Default="prosody" Mode="" Description="Container Name of your prosody server e.g. prosody" Type="Variable" Display="always" Required="false" Mask="false">jitsi-prosody</Config>
  <Config Name="JITSI_VIDEO_PASS" Target="JITSI_VIDEO_PASS" Default="secret3" Mode="" Description="Jitsi Video Bridge Secret e.g." Type="Variable" Display="always" Required="false" Mask="false">secret3</Config>
  <Config Name="NETWORK_MODE" Target="NETWORK_MODE" Default="NAT" Mode="" Description="Network Mode NAT or HOST" Type="Variable" Display="always" Required="false" Mask="false">NAT</Config>
</Container>